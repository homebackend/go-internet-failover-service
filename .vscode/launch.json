    "version": "0.2.0",
    "configurations": [
        {
            "name": "IFS Start",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/pkg/main.go",
            "args": [
                "start",
                "-c", "${workspaceFolder}/config/ifs.yaml"
            ]          
        },
        {
            "name": "IFS Show Status",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/pkg/main.go",
            "args": [
                "status"
            ]          
        },
        {
            "name": "IFS Stop",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/pkg/main.go",
            "args": [
                "stop"
            ]          
        }
    ]
}